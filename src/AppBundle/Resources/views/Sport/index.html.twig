{% extends 'AppBundle::layouts/filled.html.twig' %}

{% block content -%}

    <div class="panel-heading">
        <h2 class="pull-left">{{ 'messages.sport.list.title'|trans }}</h2>
        <div class="pull-right header-buttons">
        <a href="{{ path('sport_new') }}" class="btn btn-primary btn-lg">
            <span class="glyphicon glyphicon-plus"></span>
            {{ 'messages.sport.list.add'|trans }}
        </a>
        </div>
    </div>
    <div class="clearfix"></div>
    <br>
    <div class="well">
        {{ 'messages.sport.list.help'|trans }}
    </div>

    {%  if entities %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ 'messages.sport.columns.name.label'|trans }}</th>
                    <th>{{ 'messages.sport.columns.displayName.label'|trans  }}</th>
                    <th>{{ 'messages.sport.columns.color.label'|trans  }}</th>
                    <th colspan="2">{{ 'messages.actionHeader'|trans  }}</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.displayName }}</td>
                        <td style="background-color:{{ entity.color }}"></td>
                        <td>
                            <a data-toggle="tooltip" data-placement="left" title="{{ 'messages.edit'|trans }}" class="btn btn-sm btn-info" href="{{ path('sport_edit', { 'id': entity.id }) }}">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                        <td>
                            <form action="{{ path('sport_delete', { 'id': entity.id }) }}" method="post">
                                <input type="hidden" name="_method" value="DELETE" />
                                {{ form_widget(deleteForms[entity.id]._token) }}

                                <button type="submit" name="form[submit]" data-submit-confirm-text="{{ 'messages.confirmText'|trans }}" data-toggle="tooltip" data-placement="left" title="{{ 'messages.delete'|trans }}" class="btn btn-sm btn-danger">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {%  else %}
        {{ 'messages.noResults'|trans }}
    {% endif %}



    {% endblock %}
